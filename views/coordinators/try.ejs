<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Event</title>
    <link rel="stylesheet" href="/user/styles/AddEvent.css" />
  </head>
  <body>
    <section>
      <div class="box">
        <div class="square" style="--i: 0"></div>
        <div class="square" style="--i: 1"></div>
        <div class="square" style="--i: 2"></div>
        <div class="square" style="--i: 3"></div>
        <div class="square" style="--i: 4"></div>
        <div class="square" style="--i: 5"></div>

        <div class="container">
          <div class="form">
            <h2>Add Events</h2>
            <form action="/coordinators/add_event/submit" method="post">
              <div class="inputBx">
                <input type="text" name="e_name" required="required" />
                <span>Event Name:</span>
                <i class="fas fa-user-circle"></i>
              </div>
              <div class="inputBx">
                <input type="text" name="e_startDate" required="required" />
                <span>Start Date:</span>
                <i class="fas fa-user-circle"></i>
              </div>
              <div class="inputBx">
                <input type="text" name="e_endDate" required="required" />
                <span>End Date:</span>
                <i class="fas fa-user-circle"></i>
              </div>
              <div class="inputBx">
                <button type="submit">Add Event</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <script src="/user/javascript/AddEvent.js"></script>
  </body>
</html>
